<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background shape with stroke and corners -->
    <item>
        <shape>
            <stroke android:color="@color/grey" android:width="1dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Define the bitmap item -->
    <item android:right="5dp" android:gravity="center_vertical|right" android:drawable="@drawable/baseline_keyboard_arrow_down_24">
    </item>
</layer-list>